<resources>

    <style name="AppTheme" parent="Base.AppTheme"></style>

    <style name="AppThemeNoActionBar" parent="Base.AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="BaseButton">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:layout_margin">@dimen/activity_control_margin</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BaseTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/primary_text_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:layout_margin">@dimen/activity_control_margin</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="AppThemeNoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppThemeNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
